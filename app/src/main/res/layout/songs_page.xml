<?xml version="1.0" encoding="utf-8"?>
<!-- Songs list layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_art_image_view"
        android:layout_width="@dimen/album_art_width"
        android:layout_height="@dimen/album_art_height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/album_cover"/>

    <TextView
        android:id="@+id/album_name_text_view"
        style="@style/albumTextViewStyle"
        android:text="@string/albumNameText"
        android:textSize="@dimen/activityAlbumInfoTextSize"/>

    <TextView
        android:id="@+id/artist_name_text_view"
        style="@style/albumTextViewStyle"
        android:text="@string/artistNameText"
        android:textSize="@dimen/activityAlbumInfoTextSize"/>

    <ListView
        android:id="@+id/song_list_view"
        style="@style/listViewAttributes"/>

</LinearLayout>
